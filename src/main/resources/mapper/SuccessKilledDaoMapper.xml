<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.seckill.dao.SuccessKilledDao">
    <resultMap id="successKilledMap" type="com.seckill.pojo.SuccessKilled">
        <result property="seckillId" column="s.seckill_id" />
        <result property="userPhone" column="s.user_phone" />
        <result property="state" column="s.state" />
        <result property="createTime" column="s.create_time" />
        <association property="seckill" javaType="com.seckill.pojo.Seckill">
            <result property="seckillId" column="sk.seckill_id" />
            <result property="name" column="sk.name" />
            <result property="number" column="sk.number" />
            <result property="create_time" column="sk.create_time" />
            <result property="start_time" column="sk.start_time" />
            <result property="end_time" column="sk.end_time" />
        </association>
    </resultMap>

    <insert id="insertSuccessKilled">
        insert ignore into success_killed(seckill_id, user_phone, state)
        values (#{seckillId}, #{userPhone}, 0)
    </insert>
    <select id="queryByIdWithSeckill" resultMap="successKilledMap" parameterType="long">
        select sk.seckill_id,
               sk.user_phone,
               sk.create_time,
               sk.state,
               s.seckill_id as "seckill.seckill_id",
               s.name as "seckill.name",
               s.number as "seckill.number",
               s.start_time as "seckill.start_time",
               s.end_time as "seckill.end_time",
               s.create_time as "seckill.create_time"
        from success_killed sk
                 inner join seckill s on sk.seckill_id = s.seckill_id
        where sk.seckill_id = #{seckillId}
    </select>
</mapper>